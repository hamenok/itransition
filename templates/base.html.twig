<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% trans %}Welcome!{% endtrans %}{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

    <link rel="stylesheet" href="{{ asset('assets/main/css/main.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/framework/bootstrap-5.1.3/css/bootstrap.min.css') }}">
    <script src="{{ asset('assets/framework/bootstrap-5.1.3/js/bootstrap.min.js') }}"></script>
 
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body>
    
    {% block header %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="{{ path('home') }}">{% trans %}HOME{% endtrans %}</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {% if is_granted('ROLE_USER') %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            {{ app.user.email }}
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                <div class="text-center">
                                    {% if (app.user.avatar) %}
                                    <img src="{{ asset('images/users/') }}{{ app.user.avatar }}" class="rounded" alt="User photo">
                                    {% else %}
                                    <img src="{{ asset('images/users/no-avatar.png') }}" class="rounded" alt="User photo">
                                    {% endif %}
                                </div>
                            <li>
                                <a class="dropdown-item" href="{{ path('profile', {id: app.user.id}) }}">{% trans %}My Profile{% endtrans %}</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">{% trans %}My Collection{% endtrans %}</a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %} 
                                <li>
                                    <a class="dropdown-item" href="{{ path('admin') }}">{% trans %}Admin panel{% endtrans %}</a>
                                </li>
                            {% endif %}
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                            <a class="dropdown-item" href="{{ path('app_logout') }}">{% trans %}LOGOUT{% endtrans %}</a></li>
                        </ul>
                    </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_registration') }}">{% trans %}Registration{% endtrans %}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('login') }}">{% trans %}Sign in{% endtrans %}</a>
                    </li>
                    {% endif %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                        {{ app.request.locale|locale_name(app.request.locale)|u.title }}
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-language">
                            <a class="dropdown-item" href="{{ path('lang', {loc: 'en'}) }}">English</a>
                            <a class="dropdown-item" href="{{ path('lang', {loc: 'ru'}) }}">Russian</a>
                        </div>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="{% trans %}Search{% endtrans %}" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">{% trans %}Search{% endtrans %}</button>
                </form>
            </div>
        </div>
    </nav>
    {% endblock %}
    {% block body %}
    {% endblock %}
    {% block footer %}
    {% endblock %}

</body>
</html>