{% extends 'base.html.twig' %}

{% block title %}{% trans %}Login{% endtrans %}{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row no-gutter justify-content-center">
        <div class="col-12 col-lg-4 col-md-4">
            <div class="form-login shadow-lg">
                {% if error %}
                    <div class="alert alert-danger text-center" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>   
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        <h1 class="h3 mb-4 fw-normal text-center">{% trans %}You are logged in as{% endtrans %}
                            {{ app.user.email }}, <a href="{{ path('app_logout') }}">{% trans %}Logout{% endtrans %}</a>
                        </h1>
                    </div>
                {% else %}
                    <form action="{{ path('login') }}" method="post">
                        <h1 class="h3 mb-4 fw-normal text-center">{% trans %}Login{% endtrans %}</h1>
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">{% trans %}Email{% endtrans %}:</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                                name="_username" value="{{ last_username }}">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">{% trans %}Password{% endtrans %}:</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" name="_password">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </div>
                        <div class="mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me" checked />
                                {% trans %}Remember me{% endtrans %}
                            </label>
                        </div>
                        <div class="d-grid mt-5 mb-3">
                            <button type="submit" class="btn btn-block btn-primary">{% trans %}Login{% endtrans %}</button>
                        </div>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% endblock %}