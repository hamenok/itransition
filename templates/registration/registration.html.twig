{% extends 'base.html.twig' %}

{% block title %}{% trans %}Register{% endtrans %}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row no-gutter justify-content-center">
        <div class="col-12 col-lg-4 col-md-4">
            <div class="form-login shadow-lg">
                <h1 class="h3 mb-4 fw-normal text-center">{% trans %}Register{% endtrans %}</h1>
                    {{ form_start(registrationForm) }}
                        {{ form_errors(registrationForm.email) }}
                        {{ form_label(registrationForm.email,'Email'|trans) }}
                        {{ form_widget(registrationForm.email) }}
                        {{ form_label(registrationForm.plainPassword,'Password'|trans) }}
                        {% if form_errors(registrationForm.plainPassword) %}
                            <div class="alert alert-danger" role="alert">
                                {{ form_errors(registrationForm.plainPassword) }}
                            </div>
                        {% endif %}
                        {{ form_widget(registrationForm.plainPassword) }}
                        {{ form_errors(registrationForm.agreeTerms) }}
                        {{ form_widget(registrationForm.agreeTerms) }}
                        {{ form_label(registrationForm.agreeTerms,'Ð¡onfirm'|trans) }}
                        <div class="d-grid">
                            {{ form_row(registrationForm.save) }}
                        </div>
                    {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}